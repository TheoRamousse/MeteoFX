<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.AddMeanSensor">
    <HBox alignment="CENTER" prefWidth="250.0" spacing="15">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label id="labelDetail">
            Nom du capteur :
        </Label>
        <TextField promptText="Saisir le nom du capteur" fx:id="nameInput" minWidth="100.0" prefWidth="200.0"/>
    </HBox>
    <ComboBox fx:id="sensorContainer"></ComboBox>
</VBox>
