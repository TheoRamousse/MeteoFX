    <BorderPane style="-fx-background-color: #EAEAEA;" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.rowSpan="2">
        <center>
            <VBox alignment="CENTER">
                <HBox alignment="CENTER" prefWidth="250.0" spacing="15">
                    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
                    <Label style="-fx-text-fill: black;">
                        <font>
                            <Font size="18" />
                        </font>
                        Nom du capteur :
                    </Label>
                    <TextField fx:id="nameInput" minWidth="100.0" prefWidth="200.0" />
                </HBox>
                <HBox alignment="CENTER" prefWidth="250.0" spacing="15">
                    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
                    <Label style="-fx-text-fill: black;">
                        <font>
                            <Font size="18" />
                        </font>
                        Fréquence de rafraichissement :
                    </Label>
                    <TextField fx:id="freqInput" minWidth="50.0" prefWidth="100.0" />
                    <Label style="-fx-text-fill: black;">
                        <font>
                            <Font size="18" />
                        </font>
                        secondes
                    </Label>
                </HBox>
                <HBox alignment="CENTER" prefWidth="250.0" spacing="15">
                    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
                    <Label style="-fx-text-fill: black;">
                        <font>
                            <Font size="18" />
                        </font>
                        Température actuelle :
                    </Label>
                    <TextField fx:id="temperatureInput" minWidth="50.0" prefWidth="100.0" />
                    <Label style="-fx-text-fill: black;">
                        <font>
                            <Font size="18" />
                        </font>
                        °C
                    </Label>
                </HBox>
                <HBox alignment="CENTER" prefWidth="250.0" spacing="15">
                    <Label style="-fx-text-fill: black;">
                        <font>
                            <Font size="18" />
                        </font>
                        Algoriythmique utilisé :
                    </Label>
                    <ComboBox fx:id="comboBoxAlgos" prefWidth="150.0" />
                </HBox>
            </VBox>
        </center>
        <top>
            <HBox BorderPane.alignment="TOP_LEFT">
                <Label style="-fx-text-fill: #24C600;">
                    <font>
                        <Font size="18" />
                    </font>
                    Capteur n°
                </Label>
                <Label fx:id="sensorNum" style="-fx-text-fill: #24C600;">
                    <font>
                        <Font size="18" />
                    </font>
                </Label>
                <Label style="-fx-text-fill: #24C600;">
                    <font>
                        <Font size="18" />
                    </font>
                    :
                </Label>
            </HBox>
        </top>
        <bottom>
            <HBox alignment="CENTER" spacing="15.0">
                <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
                <Button onAction="#showCamView" style="-fx-text-fill: white; -fx-background-color: #24C600;" text="Afficher la caméra" />
                <Button onAction="#showDigitalView" style="-fx-text-fill: white; -fx-background-color: #24C600;" text="Affichage analogique" />
                <Button style="-fx-text-fill: white; -fx-background-color: #24C600;" text="Affichage thermomètre" />
            </HBox>
        </bottom>
    </BorderPane>

    <VBox alignment="CENTER" style="-fx-background-color: #EAEAEA;" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <Button alignment="CENTER" minWidth="150.0" style="-fx-text-fill: white; -fx-background-color: #24C600;">AJOUTER</Button>
    </VBox>




    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="150.0" percentWidth="15.0" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="85.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="95.0" vgrow="SOMETIMES" />
        <RowConstraints percentHeight="5.0" valignment="CENTER" vgrow="SOMETIMES" />
    </rowConstraints>
</GridPane>
